{
  "manifest_version": 2,
  "name": "Image Max URL",
  "version": "0.9.3",

  "description": "Finds larger or original versions of images",

  "background": {
    "scripts": [
      "extension/background.js"
    ],
    "persistent": true
  },

  "applications": {
    "gecko": {
      "id": "maxurl@qsniyg"
    }
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["userscript.user.js"]
    }
  ],

  "icons": {
    "48": "resources/logo_48.png",
    "96": "resources/logo_96.png"
  },

  "options_ui": {
    "page": "extension/options.html"
  },

  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "contextMenus",

    "<all_urls>"
  ]
}
